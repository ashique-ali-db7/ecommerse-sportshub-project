 <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    {{#if cartItemsEmpty}}
<div class="card cartempty" style="border: none;">
  <div class="card-body">
<img src="/images/users/cartempty1.png" style="width:30%" alt="">
<h3 class="mt-5">Hey,it feels so light!</h3>
