 <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="cart-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th class="p-name">Product Name</th>
                                    <th>Price</th>
                                    <th>Size</th>
                                    <th>Quantity</th>
                                    <th>Sub Total</th>
                                    <th>Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each cartItems}}
                                <tr id="{{this.productdetails._id}}{{this.size}}remove">
                                  
                                    <td class="cart-pic first-row"><img src="/images/product-images/{{this.productdetails._id}}1.png" style="width: 20%;height:auto" alt=""></td>
                                    <td class="cart-title first-row">
                                        <h5>{{this.productdetails.productname}}</h5>
                                    </td>
                                    <td class="p-price first-row">{{this.productdetails.price}}</td>
                                 
                                    <td class="first-row">{{this.size}}</td>
                                    <td class="qua-col first-row">
                                        {{!-- <div class="quantity">
                                            <div class="pro-qty">
                                                <input type="text" value="{{this.quantity}}">
                                            </div>
                                        </div> --}}
                                         <button class="qtybt mr-3" id="{{this.productdetails._id}}{{this.size}}-" onclick="changeQuantity('{{this._id}}','{{this.productdetails._id}}','{{this.size}}',-1,'{{../user._id}}')">-</button>
                                         <span id="{{this.productdetails._id}}{{this.size}}">{{this.quantity}}</span> 
                                         <button class="qtybt ml-3" id="{{this.productdetails._id}}{{this.size}}+" onclick="changeQuantity('{{this._id}}','{{this.productdetails._id}}','{{this.size}}',1,'{{../user._id}}')">+</button> 
                                    </td>
                                   
                                    <td class="total-price first-row">60.00</td>
                                    <td class="close-td first-row"><button class="btn btn-danger" onclick="deletecartproduct('{{this.productdetails._id}}','{{this._id}}','{{this.size}}','{{this.productdetails.productname}}')">Remove</button></td>
                                </tr>
                              
                                {{/each}}
                               
