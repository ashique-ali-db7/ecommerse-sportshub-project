<div class="container rounded bg-white  mb-3">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
             
              <span class="font-weight-bold">{{user.profile.fullname}}</span><span class="text-black-50">{{user.profile.email}}</span><span> </span></div>
            <a href="/userprofile"  class="btn mt-2" style="width: 100%;background-color:#ffff;border:1px solid #e7ab3c">Profile information</a>
             <a href="/profileaddress" class="btn mt-2" style="width: 100%;background-color:#e7ab3c;border:1px solid #e7ab3c">Manage Addresses</a>
              <a href="/userorderdetails" class="btn mt-2" style="width: 100%;background-color:#ffff;border:1px solid #e7ab3c">My orders</a>
        </div>
        <div class="col-md-8 border-right">
            
            <div class="p-3 py-5">
                <div  class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right" >Address</h4>
                </div>

                                 <p style="color: red;">{{existDefaultAddress}}</p>   

                     <button class="btn ml-3 text-primary" style="float: right;border:1px solid #bbb3b3" class="btn btn-default btn-rounded mb-4" data-toggle="modal" data-target="#modaladdressForm">Add new</button>
{{#if defaultaddress}}
<h5 class="mb-2"><b>DEFAULT ADDRESS</b> </h5>
                                <div class="card mt-5 mb-4 shadow p-3 mb-5 bg-body rounded">
  <div class="card-body">
      <div class="row">
<div class="col-1">
 
</div>
<div class="col-10 ">
 <h5  >{{defaultaddress.name}}</h5>
 <p class="mt-3" ><span>{{defaultaddress.housename}} </span><span>{{defaultaddress.street}} </span><span>{{defaultaddress.district}} </span> <span>{{defaultaddress.state}}</span></p>
 <p>pincode: {{defaultaddress.pincode}}</p>
 <p>mobile number: <span  style="font-size: 1.1rem;color:black">{{defaultaddress.mobilenumber}}</span></p>
 
   <button class="text-primary" style="background-color: #ffff; " onclick="profileeditdefaultaddress('{{defaultaddress._id}}')"  data-toggle="modal" data-target="#modaladdressFormEdit" >Edit</button>
 </div>
 </div>
  </div>
                                </div>


{{else}}
<h5 class="mb-2"><b>DEFAULT ADDRESS</b> </h5>
   <div class="card mt-5 mb-4 shadow p-3 mb-5 bg-body rounded">
  <div class="card-body">
      <div class="row">
<div class="col-1">

</div>
<div class="col-10 ">
 
                        <button class="btn ml-3 text-danger" style="float: left;border:1px solid #bbb3b3 width:100%;fontsize:50px" class="btn btn-default btn-rounded mb-4" data-toggle="modal" data-target="#modaladdressForm"><span class="mr-3" style="font-size: 20px;">+</span><span style="font-size: 25px;">Add new</span> </button>
 </div>
 </div>
  </div>
                                </div>




                                {{/if}}

{{#if otheraddress}}
                          <h5 class="mb-2 mt-2">
                    <b> OTHER ADDRESS</b></h5>
                  {{#each otheraddress}}
             <div id='{{this.address._id}}' class="card shadow p-3 mb-5 bg-body rounded">
           <div class="card-body">
      <div class="row">
          <div class="col-1">
   
    </div>
    <div class="col-10">
 <h5 >{{this.address.name}}</h5>
 <p class="mt-3" ><span>{{this.address.housename}} </span><span>{{this.address.street}} </span><span>{{this.address.district}} </span> <span>{{this.address.state}}</span></p>
 <p>pincode: {{this.address.pincode}}</p>
 <p>mobile number: <span  style="font-size: 1.1rem;color:black">{{this.address.mobilenumber}}</span></p>
 <button class="text-danger" style="background-color: #ffff;" onclick="deleteotheraddress('{{this.address._id}}')" >Remove</button>  <button class="text-primary" style="background-color: #ffff;" onclick="editotheraddress('{{this.address._id}}')"  data-toggle="modal" data-target="#modalotheraddressFormEdit"  >Edit</button>
 </div>
 </div>
  </div>
                                </div>
                                {{/each}}
                  
{{/if}}



           </div>


        </div>
      
    </div>
</div>
</div>
</div>












<div class="modal fade" id="modaladdressForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Add New Address</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
          <form action="/profileaddaddress" id="modaladdaddress" method="post">   
        <div class="md-form mb-4">
          
          <input type="text" placeholder="name"  name="name" value="" class="form-control validate">
         
        </div>

        <div class="md-form mb-4">
        
          <input type="text" placeholder="house name"   name="housename" value="" class="form-control validate">
       
        </div>

         <div class="md-form mb-4">
        
          <input type="text" placeholder="street"  name="street" value="" class="form-control validate">
       
        </div>
         <div class="md-form mb-4">
        
          <input type="text" placeholder="district"  name="district" value="" class="form-control validate">
       
        </div>

         <div class="md-form mb-4">
        
          <input type="text" placeholder="state"  name="state" value="" class="form-control validate">
       
        </div>

         <div class="md-form mb-4">
        
          <input type="text" placeholder="pincode"  name="pincode" value="" class="form-control validate">
       
        </div>
 
         <div class="md-form mb-4">
        
          <input type="text" placeholder="mobile number"  name="mobilenumber" value="" class="form-control validate">
     
        </div>
       
<input type="checkbox" style="display:inline-block" name="defaultaddress"> <p style="display:inline-block">Default Address</p>
     
    
      
      <div class="modal-footer d-flex justify-content-center">
         
        <button type="submit" class="btn btn-default" style="width: 100%; background-color:#e7ab3c">Add Address</button>
        
      </div>
        </form>
   </div>
    </div>
    
  </div>
</div>




