
<div class=" me-auto ms-auto " style="width: 40%;">
     <h1>Add Brand</h1> 
    <form action="/admin/brand-managment" method="post" id="brandvalidationform" enctype="multipart/form-data" >
        <div class="mb-3">
          <label for="" class="form-label">Brand Name</label>
          <input type="text" name="brandName" class="form-control" >
        </div>

             <div class="mb-3">
          <p style="color: red;">{{brandExistError}}</p>
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Brand Description</label><br>
          <textarea name="brandDescription" id="" cols="40" rows="5" class="brandmanagment-textarea"></textarea>
        </div>

         {{!-- <div class="mb-3">
            <label for="" class="form-label">Logo</label><br>
          <input type="file" name="logo">
        </div> --}}


{{!-- crop --}}

       <div class="col-lg-6">
                        <div id="image-box" style="width: 500px; height: 500px; display: none;"></div>
                        <button class="btn btn-primary mt-3" type="button" style="display: none;"
                            id="crop-btn">Crop</button>
                    </div>




<div class="mb-3" style="width: 45%;">
                        <label for="">Logo</label>
                        <img src="" alt="" style="width: 100px; height:auto" id="imgview1">
                     
                        <input type="file" name="logo" id="file1" class="form-control"
                            onchange="return fileValidationbrand()">
                    </div>




        {{!-- <div class="mb-3" id="img-preview">
            <label for="" class="form-label">Logo</label><br>
