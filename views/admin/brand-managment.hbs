
<div class=" me-auto ms-auto mt-5" style="width: 40%;">
    <h1>Add Brand</h1>
    <form action="/admin/brand-managment" method="post" id="brandvalidationform" enctype="multipart/form-data" class="mt-5">
        <div class="mb-3">
          <label for="" class="form-label">Brand Name</label>
          <input type="text" name="brandName" class="form-control" >
        </div>

             <div class="mb-3">
          <p style="color: red;">{{bannerExistError}}</p>
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Brand Description</label><br>
          <textarea name="brandDescription" id="" cols="40" rows="5" class="brandmanagment-textarea"></textarea>
        </div>

         {{!-- <div class="mb-3">
            <label for="" class="form-label">Logo</label><br>
          <input type="file" name="logo">
        </div> --}}

        <div class="mb-3" id="img-preview">
            <label for="" class="form-label">Logo</label><br>
            <input type="file"  name="logo" accept="image/*" onchange="viewLogoImage(event)">
            <img src="" alt="" class="mt-4" style="width: 6rem;height:6rem;display:none" id="imagelogo"><br>
           
          </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>



    <table class="table" id="brandtable">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Brand</th>
      <th scope="col">Logo</th>
      <th scope="col">Delete</th>
     
      
    </tr>
  </thead>
  <tbody>
    {{#each brandData}}
    <tr>
     
     <td>{{@key}}</td>
      <td>{{this.brandName}}</td>
      <td><img style="width:50px;height:50px;" src="/images/brand-images/{{this._id}}.png" alt=""></td>
     <td><a onclick="deletebrand('{{this._id}}')" href="#" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop" >Delete</a></td>
     
     
     
    </tr>
  {{/each}}
  </tbody>
</table>



<!-- Modal -->

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Delete user</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body" id="modal-body-id">
            
        
       
      </div>
     
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
         <a href="" id="deletebrand" type="button" class="btn btn-primary">yes</a>
      </div>
    </div>
  </div>
</div>