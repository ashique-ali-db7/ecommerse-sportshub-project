            <img src="" alt="" class="mt-4" style="width: 6rem;height:6rem;display:none" id="imagelogo"><br>
           
          </div> --}}

        <button id="confirm-btn" type="submit" style="width: 50%;margin-left:25%" class="btn btn-primary mt-5">Add Brand</button><br>
      </form>
    </div>



    <table class="table" id="brandtable">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Brand</th>
      <th scope="col">Logo</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
     
      
    </tr>
  </thead>
  <tbody>
    {{#each brandData}}
    <tr>
     
     <td>{{@key}}</td>
      <td>{{this.brandName}}</td>
      <td><img style="width:50px;height:50px;" src="/images/brand-images/{{this._id}}.png" alt=""></td>
       <td><a href="/admin/editbrand?id={{this._id}}" class="btn btn-primary">Edit</a></td>
    
     <td><a onclick="deletebrand('{{this._id}}')" href="#" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop" >Delete</a></td>
     
     
     
    </tr>
  {{/each}}
  </tbody>
</table>



<!-- Modal -->

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Delete user</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body" id="modal-body-id">
            
        
       
      </div>
     
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
         <a href="" id="deletebrand" type="button" class="btn btn-primary">yes</a>
      </div>
    </div>
  </div>
</div>