<div class="container p-5">

<div class="col-6 me-auto ms-auto shadow p-3 mb-5 bg-body rounded">


<form action="/admin/coupenoffer"  style="width: 80%;margin-left: 10%;" id="coupenoffer" method="post">




    
     
<h4 style="text-align: center;">Coupon managment</h4>
<p style="color: red;">{{coupenCountError}}</p>
<p style="color: red;">{{coupenExistError}}</p>
 
 <div class="row mb-3">
          <div class="col-6">
   <input type="text" placeholder="Coupon code" class="mt-4" name="coupencode"style="width:100%;height:45px;">
</div>

<div class="col-6">
     <input type="text" name="coupenpercentage" placeholder="Offer percentage" class="mt-4" style="height:45px;width:100%">
</div>
     </div>

     <div class="row">

         <div class="col-6 mb-3">
 <label class="mt-3" for="">Start date</label><br>
  <input type="date" id="bbbb" name="coupenstartdate" style="width:100%;height:45px;">
         </div>

           <div class="col-6">
 <label class="mt-3" for="caofferenddate">End date</label><br>
  <input type="date" id="cccc" name="coupenenddate" style="width:100%;height:45px;">
         </div>

     </div>





     <div class="mt-4" style="text-align: center;">
     <button type="submit" style="width: 50%;"  class="btn btn-primary">Submit</button>
     </div>
</form>


</div>







<div class="p-4" style="background-color: #fff;border:1px solid rgb(170, 167, 167)">
<table class="table" id="coupenoffertable">
  <thead>

    <tr>
  
      <th scope="col">Coupon</th>
     
      <th scope="col">offer percentage</th>
      <th scope="col">Start date</th>
      <th scope="col">End date</th>
           <th scope="col">Edit</th> 
      <th scope="col">Delete</th> 
    </tr>
  </thead>
  <tbody>
       {{#each coupendetails}}
    <tr>
      <td>{{this.coupencode}}</td>
     
      <td>{{this.coupenpercentage}}</td>
      <td>{{this.coupenstartdate}}</td>
      <td>{{this.coupenenddate}}</td>
    
        <td><button onclick="couponOfferEdit('{{this._id}}')" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalforcouponedit">Edit Offer</button></td>  
      <td><button class="btn btn-danger" onclick="deletecoupenoffer('{{this.coupencode}}')">Delete coupon</button></td>
    </tr>
    {{/each}}
   
  </tbody>
</table>
</div>





<!-- Modal -->
<div class="modal fade" id="modalforcouponedit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit offer</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
       <form action="/admin/editcouponoffer" style="width: 80%;margin-left: 10%;" id="editcategoryoffer" method="post">




    
     
<h4 style="text-align: center;" id="coupondisabledoption"></h4>

 <div class="row mb-3">
           <div class="col-6" style="display: none;">
          <input type="text" name="coupen" id="couponhiddencode" value="">
   
</div> 
<div class="col-12">
   <label class="mt-3" for="caofferstartdate">Discount in percentage</label><br>
     <input type="text"  id="coupondiscountedit"name="coupondiscountpercentage" placeholder="Discount" class="mt-4" style="height:45px;width:100%">
</div>
     </div>

     <div class="row">

         <div class="col-6 mb-3">
 <label class="mt-3" for="caofferstartdate">Start date</label><br>
  <input type="date" id="couponstartdateedit" name="couponfferstartdate" style="width:100%;height:45px;">
         </div>

           <div class="col-6">
 <label class="mt-3" for="caofferenddate">End date</label><br>
  <input type="date" id="couponenddateedit" name="couponofferenddate" style="width:100%;height:45px;">
         </div>

     </div>





     <div class="mt-4" style="text-align: center;">
     <button type="submit" style="width: 50%;"  class="btn btn-primary">Submit</button>
     </div>
</form>
      </div>
    
    </div>
  </div>
</div>



</div>