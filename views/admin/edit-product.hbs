<div class="container col-7 p-4">

<div class=" me-auto ms-auto shadow p-3 mb-5 bg-body rounded" >
   <h1 style="text-align: center;">Edit product</h1>
    <form action="/admin/edit-product?productid={{data.productid}}&id={{data._id}}" onsubmit="return onsubmitForm(this)"  class="mt-5" method="post" id="editproduct" enctype="multipart/form-data">

<div class="row">

        <div class="mb-2 col-lg-6 col-sm-12">
          <label for="" class="form-label">Product Name</label>
          <input name="productname" value="{{data.productname}}" type="text" class="form-control" >
         
        </div>
         <div class="mb-2 col-lg-6 col-sm-12">
            <label for="" class="form-label">Brand</label><br>
        
            <select name="brand" id="brand" style="width: 100%;height: 40px;color: #212529;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;">
            
              {{#each brandData}}
              <option>{{this.brandName}}</option>
             {{/each}}
            </select>
         
        </div>

        <div class="mb-4 col-lg-6 col-sm-12">
            <label for="" class="form-label">Select category</label><br>
        
            <select name="category" id="categorychange" style="width: 100%;height: 40px;color: #212529;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;" onchange="formCategory()">
              <option selected="true" disabled="disabled">{{data.category}}</option>    
              {{#each categoryData}}
              <option>{{this.category}}</option>
              {{/each}}

            </select>
 
        </div>

        <div class="mb-4 col-lg-6 col-sm-12">
            <label for="" class="form-label">Select sub category</label><br>
          
            <select name="subcategory" id="formsubcategory" style="width: 100%;height: 40px;color: #212529;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;">
            
             <option selected="true" disabled="disabled">{{data.subcategory}}</option> 
  
            </select>
         
        </div> 

<div class="row">

        <div class="mb-2 col-lg-4 col-sm-12" >
            <label for="" class="form-label" >Small quantity</label><br>
            <input type="text" name="smallquantity" value="{{smallquantity}}" style="width: 30%;color: #212529;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;" class="">
        </div>

        <div class="mb-2 col-lg-4 col-sm-12" >
            <label for="" class="form-label" >Medium quantity</label><br>
            <input type="text" name="mediumquantity" value="{{mediumquantity}}" style="width: 30%;color: #212529;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;"class="">
        </div>

        <div class="mb-2 col-lg-4 col-sm-12" >
            <label for="" class="form-label" >Large quantity</label><br>
            <input type="text" name="largequantity" value="{{largequantity}}" style="width: 30%;color: #212529;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;"class="">
        </div>
</div>

<div class="row">
 <div class="mb-2 col-lg-6 col-sm-12">
            <label for="" class="form-label">Price</label>
            <input type="text" name="price" value="{{data.price}}" class="form-control" >
           
          </div>

        



       




       


          <div class="mb-3 col-lg-6  col-sm-12" >
            <label for="" class="form-label">Description</label><br>
           <textarea name="description" id="" style="color: #212529;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;"  cols="35" rows="5">{{data.description}}</textarea>
           
          </div>

            <div class="mb-2 col-lg-6 col-sm-12" >
            <label for="" style="display: none;" class="form-label">Landing price</label>
            <input type="text" style="display: none;" name="landingprice" value="{{data.price}}" class="form-control" >
           
          </div> 

          </div>

       


       <div class="col-lg-6">
                        <div id="image-box" style="width: 500px; height: 500px; display: none;"></div>
                        <button class="btn btn-primary mt-3" type="button" style="display: none;"
                            id="crop-btn">Crop</button>
                    </div>
          




<div class="row">

<div class="mb-3" style="width: 45%;">
                        <label for="">IMAGE 1</label>
                        <img src="" alt="" style="width: 100px; height:auto" id="imgview1">
                                <img style="width: 100px; height:auto" src="/images/product-images/{{data._id}}1.png" id="editimageview1" alt="">
                        <input type="file" name="image1" id="file1" class="form-control"
                            onchange="return fileValidationedit1()">
                    </div>





                    <div class="mb-3 "style="width: 45%;">
                        <label for="">IMAGE 2</label>
                        <img src="" alt="" style="width: 100px; height:auto" id="imgview2">
                   <img style="width: 100px; height:auto" src="/images/product-images/{{data._id}}2.png" id="editimageview2" alt="">
                        <input type="file" name="image2" id="file2" class="form-control"
                            onchange="return fileValidationedit2()">
                    </div>

                    </div>
<div class="row">

                    <div class="mb-3 "style="width: 45%;">
                        <label for="">IMAGE 3</label>
                        <img src="" alt="" style="width: 100px; height:auto" id="imgview3">
                     <img style="width: 100px; height:auto" src="/images/product-images/{{data._id}}3.png" id="editimageview3" alt="">
                        <input type="file" name="image3" id="file3" class="form-control"
                            onchange="return fileValidationedit3()">
                    </div>


                    <div class="mb-3 "style="width: 45%;">
                        <label for="">IMAGE 4</label>
                        <img src="" alt="" style="width: 100px; height:auto" id="imgview4">
                     <img style="width: 100px; height:auto" src="/images/product-images/{{data._id}}3.png" id="editimageview4" alt="">
                        <input type="file" name="image4" id="file4" class="form-control"
                            onchange="return fileValidationedit4()">
                    </div>

                    </div>

         </div>




        <button id="confirm-btn" type="submit" style="width: 50%;margin-left:25%" class="btn btn-primary mt-2">Edit Product</button><br>

      </form>   


</div>
       

      
    </div>
         



 