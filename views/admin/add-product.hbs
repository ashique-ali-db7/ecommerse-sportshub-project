<div class="container col-lg-7" style="border: 1px solid rgba(100, 92, 92, 0);">

<div class=" me-auto ms-auto " style="width: 90%;">
    <h1 style="text-align: center;">Add Product</h1>
    <form action="/admin/add-product" class="" method="post" id="addproducts" enctype="multipart/form-data">
       
       <div class="row">
        <div class="mb-4 col-lg-6">
          <p style="color: red;">{{productExistError}}</p>
          <label for="" class="form-label">Product Id</label>
          <input name="productid" type="text" class="form-control" >
         
        </div>


        <div class="mb-4 mt-3 col-lg-6">
          <label for="" class="form-label">Product Name</label>
          <input name="productname" type="text" class="form-control" >
         
        </div>
       

        <div class="mb-4 col-lg-4">
            <label for="" class="form-label">Select category</label><br>
        
            <select name="category" id="categorychange" style="width: 100%;height: 40px;" onchange="formCategory()">
              <option selected="">select</option>
              {{#each categoryData}}
              <option>{{this.category}}</option>
              {{/each}}

            </select>
 
        </div>

        <div class="mb-4 col-lg-4">
            <label for="" class="form-label">Select sub category</label><br>
        
            <select name="subcategory" id="formsubcategory" style="width: 100%;height: 40px;">
            
            
  
            </select>
         <p style="color: red;">{{varsubcategoryError}}</p>
        </div>

       
 <div class="mb-4 col-lg-4">
            <label for="" class="form-label">Brand</label><br>
        
            <select name="brand" id="brand" style="width: 100%;height: 40px;">
              {{#each brandData}}
              <option>{{this.brandName}}</option>
             {{/each}}
            </select>
         
        </div>


<div class="mb-4 col-lg-6">
            <label for="" class="form-label">Landing price</label>
            <input type="text" name="landingprice" class="form-control" >
           
          </div>




<div class="mb-4 col-lg-6">
            <label for="" class="form-label">Price</label>
            <input type="text" name="price" class="form-control" >
           
          </div>


         <div class="mb-3 mt-3 col-lg-4">
            <label for="" class="form-label" >Small quantity</label>
            <input type="text" name="smallquantity" style="width: 30%;" class="ms-4 mt-3">
        </div>

        <div style="margin-top: 4.4%;" class="mb-3 col-lg-4">
            <label for="" class="form-label" >Medium quantity</label>
            <input type="text" name="mediumquantity" style="width: 30%;"class="ms-1">
        </div>

        <div style="margin-top: 4.4%;" class="mb-3 col-lg-4">
            <label for="" class="form-label" >Large quantity</label>
            <input type="text" name="largequantity" style="width: 30%;"class="ms-4">
        </div>

     


          <div class="mb-3 mt-4 col-lg-6">
            <label for="" class="form-label">Description</label><br>
           <textarea name="description" id="" cols="50" rows="5"></textarea>
           
          </div>

{{!-- crop --}}

       <div class="col-lg-6">
                        <div id="image-box" style="width: 500px; height: 500px; display: none;"></div>
                        <button class="btn btn-primary mt-3" type="button" style="display: none;"
                            id="crop-btn">Crop</button>
                    </div>
          







<div class="mb-3" style="width: 45%;">
                        <label for="">IMAGE 1</label>
                        <img src="" alt="" style="width: 100px; height:auto" id="imgview1">
                     
                        <input type="file" name="image1" id="file1" class="form-control"
                            onchange="return fileValidation1()">
                    </div>






         






                    <div class="mb-3 "style="width: 45%;">
                        <label for="">IMAGE 2</label>
                        <img src="" alt="" style="width: 100px; height:auto" id="imgview2">
                     
                        <input type="file" name="image2" id="file2" class="form-control"
                            onchange="return fileValidation2()">
                    </div>


                    <div class="mb-3 "style="width: 45%;">
                        <label for="">IMAGE 3</label>
                        <img src="" alt="" style="width: 100px; height:auto" id="imgview3">
                     
                        <input type="file" name="image3" id="file3" class="form-control"
                            onchange="return fileValidation3()">
                    </div>


                    <div class="mb-3 "style="width: 45%;">
                        <label for="">IMAGE 4</label>
                        <img src="" alt="" style="width: 100px; height:auto" id="imgview4">
                     
                        <input type="file" name="image4" id="file4" class="form-control"
                            onchange="return fileValidation4()">
                    </div>

         </div>









       

          <button id="confirm-btn" type="submit" style="width: 50%;margin-left:25%" class="btn btn-primary mt-5">Add Product</button><br>

      </form>
    </div>
            </div>

