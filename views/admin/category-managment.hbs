<div class="container">
 <div class="card mt-5">
        <div class="card-header">
          Add category
        </div>
        <div class="card-body">
          <form action="/admin/add-category" method="post">
            <label for="">Enter category</label>
            <input type="text" name="category">
          <button type="submit" class="btn btn-primary">Add</button>
          <p style="color: red;">{{categoryExistError}}</p>
          </form>

 <form action="/admin/delete-category" method="post">
            <label for="">Delete category</label>
              <select name="category" >
              {{#each categoryData}}
              <option >{{this.category}}</option>
              {{/each}}
            </select>
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
           


        </div>
      </div>

      <div class="card mt-5">
        <div class="card-header">
          Add sub category
        </div>
        <div class="card-body">
          <form action="/admin/add-subcategory" method="post">
            <label for="">Select category</label>
          
            <select name="categorySubcategory" >
              {{#each categoryData}}
              <option >{{this.category}}</option>
             {{/each}}
            </select><br>
            <input type="text" name="subcategory" class="mt-4">
            <button type="submit" class="btn btn-primary ms-4">Add sub category</button>
            <p style="color: red;">{{subcategoryExistError}}</p>
            </form>
        </div>
      </div>



      <table class="table mt-5" id="categorytable">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Category</th>
             <th scope="col">Subcategory</th> 
            
          </tr>
        </thead>
        <tbody>
          {{#each categoryData}}
          <tr>
            <th scope="row">{{@key}}</th>
            <td>{{this.category}}</td>
           
            <td>
              <ul>
                {{#each subcategory}}
                <li>{{this}} <a href="/admin/delete-subcategory?category={{../this.category}}&subcategory={{this}}"><i class="far fa-trash-alt"></i></a></li>
                 {{/each}}
                </ul>
                </td>
         
          </tr>
          
        
          {{/each}}
        </tbody>
      </table>
  
        
</div>


