
<div class="container p-5">
  

<div class="col-6 me-auto ms-auto shadow p-3 mb-5 bg-body rounded">







    
     
<h4 style="text-align: center;">Daily sales report</h4>

 
 

     <div class="row">

         <div class="col-6 mb-3">
 <label class="mt-3" for="">From date</label><br>
  <input type="date" id="salesReportStartDate" name="salesReportStartDate" style="width:100%;height:45px;">
         </div>

           <div class="col-6">
 <label class="mt-3" for="caofferenddate">Till date</label><br>
  <input type="date" id="salesReportEndDate" name="salesReportEndDate" style="width:100%;height:45px;">
         </div>

     </div>




     <div class="mt-4" style="text-align: center;">
     <button onclick="dailysalesreport()" style="width: 50%;"  class="btn btn-primary">View report</button>
     </div>



</div>





<div  class="p-3" style="background-color: #fff;border:1px solid rgb(199, 196, 196)">
<table id="example" class="display nowrap" style="width:100%">
        <thead>
            <tr>
                <th>Date</th>
                <th>Quantity</th>
                <th>Revenue</th>
                <th>Total landing price</th>
                <th>Profit</th>
             
            </tr>
        </thead>
        <tbody>


            {{#each orderReport}}
           
            <tr>    
                <td>{{this._id}}</td>
                <td>{{this.totalQty}}</td>
                <td>{{this.totalrevenue}}</td>
                <td>{{this.totalandingprice}}</td>
                <td>{{this.profit}}</td>
              
            </tr>
         {{/each}}
           
        </tbody>
